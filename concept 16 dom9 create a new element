<script type="text/javascript">
	
	//div is creating through javascript not html create element div and store in the variable division
  const division=document.createElement('div');  
  console.log(division);
  //its create the class="main" thorugh js
  division.className="main";
  //craete id="myId"
  division.id="myId";
  //set atrribute in div tag
  division.setAttribute("title","generated title");
  //now we want to write text between the div innerText is also correct create TextNode is the second method
  const node=document.createTextNode("tanya");
//now div me jod diya next ko vo node varible me save hai
  division.appendChild(node);
  //document ki body me append kr diya division ko jo element create kiya tha 
 document.body.appendChild(division);
</script>
