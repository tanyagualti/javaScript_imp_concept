<script type="text/javascript">
	
//html collecton ,node list and array these trio is not same so if we want to use foreach in html collection now we have to convert the html collection into array

const item=document.getElementsByClassName('list');//this gives html collection
	
	const value=Array.from(item);
	//this is conversion of html collection into array for use foreach

	value.forEach(function(i){
    i.style.color='pink';//change the color of list item
})
</script>
